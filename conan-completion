# conan source ...
###############################################
_conan_source() {
	boolean_options="-h --help"
	arg_options="-sf --source-folder -if --install-folder"
	map_options=""
	non_arg_options="recipe_path"
	__conan_analyse_command_line "capture_recipe"

	#process arg options (--opt=value_opt)
